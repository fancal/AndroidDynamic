<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:navigationIcon="@drawable/toolbar_back"
        app:title="收货" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单号:"
            android:textSize="20dip" />

        <com.elianshang.code.reader.ui.view.ScanEditText
            android:id="@+id/orderOtherId_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="托盘号:"
            android:textSize="20dip" />

        <com.elianshang.code.reader.ui.view.ScanEditText
            android:id="@+id/containerId_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品国条码:"
            android:textSize="20dip" />

        <com.elianshang.code.reader.ui.view.ScanEditText
            android:id="@+id/barCode_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip" />

    </LinearLayout>


    <Button
        android:id="@+id/submit_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/grey_selector_for_button"
        android:gravity="center"
        android:padding="20dip"
        android:text="提交"
        android:textColor="#ffffffff"
        android:textSize="30dip" />

</LinearLayout>