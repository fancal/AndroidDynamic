<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:navigationIcon="@drawable/toolbar_back"
        app:title="转残次" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="移除库位:"
            android:textSize="20dip" />

        <com.elianshang.code.reader.ui.view.ScanEditText
            android:id="@+id/scrap_locationid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品码:"
            android:textSize="20dip" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/scrap_itemid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textSize="20dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="包装单位:"
            android:textSize="20dip" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/scrap_pack_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textSize="20dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数量:"
            android:textSize="20dip" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/scrap_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textSize="20dip" />

    </LinearLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/grey_selector_for_button"
        android:gravity="center"
        android:padding="20dip"
        android:text="提交"
        android:textColor="#ffffffff"
        android:textSize="30dip" />

</LinearLayout>