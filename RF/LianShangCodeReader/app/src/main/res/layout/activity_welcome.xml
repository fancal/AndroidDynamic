<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/receipt_Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="1"
            android:background="@drawable/submit_button_bg"
            android:padding="20dip"
            android:text="收货"
            android:textColor="@color/white"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/shelve_Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="1"
            android:background="@drawable/submit_button_bg"
            android:padding="20dip"
            android:text="上架"
            android:textColor="@color/white"
            android:textSize="14dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/takeStock_Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="1"
            android:background="@drawable/submit_button_bg"
            android:padding="20dip"
            android:text="盘点"
            android:textColor="@color/white"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/createScrap_Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="1"
            android:background="@drawable/submit_button_bg"
            android:padding="20dip"
            android:text="转残次"
            android:textColor="@color/white"
            android:textSize="14dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createReturn_Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="1"
            android:background="@drawable/submit_button_bg"
            android:padding="20dip"
            android:text="转退货"
            android:textColor="@color/white"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/transferLocation_Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="1"
            android:background="@drawable/submit_button_bg"
            android:padding="20dip"
            android:text="移库"
            android:textColor="@color/white"
            android:textSize="14dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/procurement_Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="1"
            android:background="@drawable/submit_button_bg"
            android:padding="20dip"
            android:text="补货"
            android:textColor="@color/white"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/pick_Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="1"
            android:background="@drawable/submit_button_bg"
            android:padding="20dip"
            android:text="拣货"
            android:textColor="@color/white"
            android:textSize="14dip" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/qualityControl_Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="1"
            android:background="@drawable/submit_button_bg"
            android:padding="20dip"
            android:text="QC"
            android:textColor="@color/white"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/ship_Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight="1"
            android:background="@drawable/submit_button_bg"
            android:padding="20dip"
            android:text="发车"
            android:textColor="@color/white"
            android:textSize="14dip" />
    </LinearLayout>
</LinearLayout>