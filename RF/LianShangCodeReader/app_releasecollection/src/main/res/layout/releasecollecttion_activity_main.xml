<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:navigationIcon="@drawable/toolbar_back"
        app:title="一键装车" />

    <LinearLayout
        android:id="@+id/scan_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="扫描集货道"
            android:textSize="14dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="请扫描集货道:"
            android:textSize="14dp" />

        <com.elianshang.bridge.ui.view.ScanEditText
            android:id="@+id/locationCode_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="确认集货道"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/collectionRoad_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="集货道"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tuId_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tu号"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/driverName_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="司机"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/carNumber_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/storeNum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门店总数"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/packCount_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="箱数"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/turnoverBoxCount_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周转箱数"
                android:textSize="14dp" />
        </LinearLayout>

        <Button
            android:id="@+id/submit_Button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/submit_button_bg"
            android:enabled="true"
            android:text="确认装车"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>