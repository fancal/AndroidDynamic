<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:navigationIcon="@drawable/toolbar_back"
        app:title="QC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/create_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请扫描托盘码:"
                android:textSize="20dip" />

            <com.elianshang.code.reader.ui.view.ScanEditText
                android:id="@+id/containerId_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wait_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="请开始扫描商品条码开始QC" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_5"
                android:layout_marginTop="@dimen/dip_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进度:"
                    android:textSize="20dip" />

                <TextView
                    android:id="@+id/progress_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dip" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_5"
                android:layout_marginTop="@dimen/dip_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称:"
                    android:textSize="20dip" />

                <TextView
                    android:id="@+id/itemName_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dip" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_5"
                android:layout_marginTop="@dimen/dip_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格:"
                    android:textSize="20dip" />

                <TextView
                    android:id="@+id/packUnit_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dip" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_5"
                android:layout_marginTop="@dimen/dip_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量:"
                    android:textSize="20dip" />

                <TextView
                    android:id="@+id/qty_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dip" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_5"
                android:layout_marginTop="@dimen/dip_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实际数量:"
                    android:textSize="20dip" />

                <com.elianshang.code.reader.ui.view.ContentEditText
                    android:id="@+id/inputQty_EditView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:minWidth="60dip"
                    android:textSize="20dip" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/px_0"
                android:layout_height="@dimen/px_0"
                android:layout_weight="1" />

            <Button
                android:id="@+id/submit_Button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_50"
                android:background="@drawable/submit_button_bg"
                android:enabled="true"
                android:text="已完成QC,提交结果"
                android:textSize="24dip" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>